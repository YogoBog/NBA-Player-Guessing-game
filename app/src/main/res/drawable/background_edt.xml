<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Outer border -->
    <stroke
        android:width="2dp"
        android:color="@color/black" />

    <!-- Inner color -->
    <solid android:color="@color/white" />

    <!-- Padding -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />

</shape>
