<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Outer border -->
    <stroke
        android:width="2dp"
        android:color="#3C486B" />

    <!-- Inner color -->
    <solid android:color="#F6F1F1" />

    <!-- Rounded corners -->
    <corners android:radius="8dp" />

    <!-- Padding -->
    <padding
        android:left="16dp"
        android:top="8dp"
        android:right="16dp"
        android:bottom="8dp" />

</shape>
