<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/guess_distribution_layout"
    android:padding="16dp">

    <TextView
        android:id="@+id/win_distribution_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guess Distribution"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/guess_1"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="#FFEB3B"
            android:gravity="center"
            android:text="1"
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/guess_2"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="#FFC107"
            android:gravity="center"
            android:text="2"
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/guess_3"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="#FF9800"
            android:gravity="center"
            android:text="3"
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/guess_4"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="#FF5722"
            android:gravity="center"
            android:text="4"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/guess_5"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="#F44336"
            android:gravity="center"
            android:text="5"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/guess_6"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="#E91E63"
            android:gravity="center"
            android:text="6"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/guess_7"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="#9C27B0"
            android:gravity="center"
            android:text="7"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/guess_8"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="#3F51B5"
            android:gravity="center"
            android:text="8"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />
    </LinearLayout>
</LinearLayout>
